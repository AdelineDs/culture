    <div class="card my-3 p-1 col-xl-6 offset-xl-3">
        <div class="row no-gutters">
            {% if event.image %}
                <div class="col-md-4 blocImage">
                    <img src="../../../public/{{event.image}}" class="card-img" alt="{{event.name}}">
                </div>
            {% endif %}
            <div class="{% if event.image %}col-md-8{% endif %}">
                <div class="card-body">
                    <h1 class="card-title name">" {{event.name}} "</h5>
                    <p class="organizer"> Organisé par : {{event.organizer}}</p>
                    <p class="place"> A : {{event.place}}</p>
                    <p class="date"> Le : {{ event.date|date('d/m/Y')  }} à {{ event.hour }}</p>
                    <p class="price"> Tarif : {% if event.price == 0 %} gratuit {% else %} {{event.price}}€ {% endif%}</p>
                    <p class="card-text description">{{ event.description }}</p>
                </div>
            </div>
        </div>
    </div>
    
