{% extends "layout.twig" %}

{% block content %}
     <h2 class="d-flex justify-content-center">Entrer une nouvel évènement :</h2>
    <form action="" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="name">Nom : </label>
                <input type="text" class="form-control" id="name"  placeholder="" required>
            </div>
            <div class="form-group col-md-6">
                <label for="organizer">Organisateur : </label>
                <input type="text" class="form-control" id="organizer"  placeholder="" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="date">Date : </label>
                <input type="date" class="form-control" id="date"  placeholder="" min="2019-01-01" max="2100-12-31" required>
            </div>
            <div class="form-group col-md-6">
                <label for="hour">Heure : </label>
                <input type="time" class="form-control" id="hour"  placeholder="" min="00:00" max="23:59" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="place">Lieu : </label>
                <input type="text" class="form-control" id="place"  placeholder="" required>
            </div>
            <div class="form-group col-md-6">
                <label for="price">Prix : </label>
                <input type="text" class="form-control" id="price"  placeholder="" required>
            </div>
        </div>
        <div class="form-group">
            <label for="description">Description : </label>
            <textarea type="text" class="form-control" id="description"  placeholder="" required></textarea>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="start_view_date">Date de début d'affichage : </label>
                <input type="date" class="form-control" id="start_view_date"  placeholder="" min="2019-01-01" max="2100-12-31" required>
            </div>
            <div class="form-group col-md-6">
                <label for="start_view_hour">Heure de début d'affichage : </label>
                <input type="time" class="form-control" id="start_view_hour"  placeholder="" min="00:00" max="23:59" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="end_view_date">Date de fin d'affichage : </label>
                <input type="date" class="form-control" id="end_view_date"  placeholder="" min="2019-01-01" max="2100-12-31" required>
            </div>
            <div class="form-group col-md-6">
                <label for="end_view_hour">Heure de début d'affichage : </label>
                <input type="time" class="form-control" id="end_view_hour"  placeholder="" min="00:00" max="23:59" required>
            </div>
        </div>
        <div class="form-group">
            <label for="status">Statut : </label>
            <select type="text" class="form-control" id="status"  placeholder="" required>
                <option>Brouillon</option>
                <option>Publié</option>
                <option>Archivé</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Envoyer" >
        </div>
    </form>
{% endblock %}
